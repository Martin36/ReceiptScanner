  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Parse one PDF",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/src/parse_one_pdf.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--input_file=data/receipts/coop/coop-22-02-22.pdf",
        "--output_file=data/parses/coop-22-02-22.json"
      ]
    },
    {
      "name": "Validate json",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/src/validate_json.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--file=data/parses/coop-22-02-22.json"
      ]
    },
    {
      "name": "Write to csv",
      "type": "python",
      "request": "launch",
      "program": "${workspaceRoot}/src/write_to_csv.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--json_file=data/parses/coop-22-02-22.json",
        "--csv_file=data/tables/coop-22-02-22.csv"
      ]
    },
  ]
}